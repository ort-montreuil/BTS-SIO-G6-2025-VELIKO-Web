{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block styles %}
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f0f2f5;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .back-button {
            position: absolute;
            top: 20px;
            left: 20px;
            width: 30px;
            height: 30px;
        }

        .form-container {
            position: relative; /* Allows positioning within the container */
            background-color: #ffffff;
            padding: 50px;
            border-radius: 12px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
            max-width: 360px;
            width: 100%;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        h1 {
            font-size: 1.8rem;
            color: #007bff;
            text-align: center;
            margin-bottom: 20px;
            font-weight: bold;
        }

        form {
            width: 100%;
        }

        label {
            font-size: 0.9rem;
            color: #555;
            margin-bottom: 5px;
        }

        input, select, textarea {
            width: 100%;
            padding: 10px;
            margin-bottom: 12px;
            border: 1px solid #d1d1d1;
            border-radius: 6px;
            font-size: 0.95rem;
            background-color: #f8f9fa;
            transition: all 0.2s;
        }

        input:focus, select:focus, textarea:focus {
            border-color: #007bff;
            background-color: #fff;
        }

        /* Flex layout for rows */
        .form-row {
            display: flex;
            justify-content: space-between;
            gap: 30px;
            width: 100%;
        }

        .form-row .field {
            flex: 1;
        }

        .dob-row .field {
            flex: 1;
            width: 33%;
        }

        button {
            background-color: #007bff;
            color: #fff;
            padding: 12px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-size: 1rem;
            transition: background-color 0.3s ease;
            width: 100%;
            margin-top: 10px;
        }

        button:hover {
            background-color: #0056b3;
        }

        .form-error {
            color: #ff3860;
            font-size: 0.85rem;
            margin-bottom: 10px;
        }

        @media (max-width: 600px) {
            .form-container {
                padding: 15px;
            }

            .form-row {
                flex-direction: column;
            }

            .dob-row {
                flex-direction: column;
            }
        }

        .back-button {
            position: absolute;
            top: 20px;
            left: 20px;
            width: 30px;
            height: 30px;
        }


    </style>
{% endblock %}



{% block body %}

    <div class="form-container">


        <!-- Back button in top-left corner -->
        <a href="{{ path('app_accueil') }}" class="back-button">
            <img src="/AnimatedIcons/back.gif" alt="Back" style="width: 30px; height: 30px;">
        </a>

        {% for message in app.flashes('success') %}
            {{ message }}
        {% endfor %}


        <h1>Inscription</h1>

        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm) }}

        <!-- Email and Password -->
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, { label: 'Mot de passe' }) }}

        <!-- Nom and Prenom in one row -->
        <div class="form-row">
            <div class="field">
                {{ form_row(registrationForm.nom) }}
            </div>
            <div class="field">
                {{ form_row(registrationForm.prenom) }}
            </div>
        </div>

        <!-- Date of Birth in a single row -->
        <div class="form-row dob-row">
            <div class="field">
                {{ form_row(registrationForm.date_naissance.day, { 'label': 'Jour' }) }}
            </div>
            <div class="field">
                {{ form_row(registrationForm.date_naissance.month, { 'label': 'Mois' }) }}
            </div>
            <div class="field">
                {{ form_row(registrationForm.date_naissance.year, { 'label': 'Ann√©e' }) }}
            </div>
        </div>

        <!-- Address -->
        {{ form_row(registrationForm.adresse) }}

        <!-- Code Postal and Ville in one row -->
        <div class="form-row">
            <div class="field">
                {{ form_row(registrationForm.code_postale) }}
            </div>
            <div class="field">
                {{ form_row(registrationForm.ville) }}
            </div>
        </div>

        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn">S'inscrire</button>

        {{ form_end(registrationForm) }}
    </div>
{% endblock %}