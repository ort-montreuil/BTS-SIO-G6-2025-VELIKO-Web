{% extends 'base.html.twig' %}

{% block styles %}
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f0f2f5;
            margin: 0;
        }

        .reservation-container {
            background-color: #ffffff;
            padding: 40px;
            border-radius: 12px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
            max-width: 500px;
            width: 100%;
            text-align: center;
        }

        .reservation-container h1 {
            color: #007bff;
            margin-bottom: 20px;
            font-size: 2rem;
        }

        .form-group {
            margin-bottom: 15px;
            text-align: left;
        }

        .form-group label {
            font-weight: bold;
            color: #333;
            display: block;
            margin-bottom: 5px;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 8px;
            font-size: 1rem;
            background-color: #f9f9f9;
        }

        .cta-button {
            width: 100%;
            padding: 12px;
            font-size: 1.2rem;
            border-radius: 8px;
            background-color: #007bff;
            color: #fff;
            border: none;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .cta-button:hover {
            background-color: #0056b3;
        }


        .confirmation-message {
            position: fixed;
            top: 20px;
            right: 20px;
            background-color: #28a745;
            color: white;
            padding: 15px 20px;
            border-radius: 8px;
            font-size: 1.1rem;
            opacity: 0;
            transform: translateX(100%);
            transition: opacity 0.5s ease-out, transform 0.5s ease-out;
        }

        .confirmation-message.show {
            opacity: 1;
            transform: translateX(0);
        }


        .loading-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.7);
            display: flex;
            align-items: center;
            justify-content: center;
            opacity: 0;
            visibility: hidden;
            transition: opacity 0.3s ease-in-out;
        }

        .loading-overlay.active {
            opacity: 1;
            visibility: visible;
        }

        .loading-spinner {
            width: 50px;
            height: 50px;
            border: 5px solid #fff;
            border-top: 5px solid #007bff;
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        @keyframes spin {
            from { transform: rotate(0deg); }
            to { transform: rotate(360deg); }
        }


    </style>
{% endblock %}



{% block javascripts %}
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const dateInput = document.getElementById("reservation_date");
            const heureDebutInput = document.getElementById("heure_debut");

            function updateMinTime() {
                const now = new Date();
                const currentTime = now.toISOString().slice(11, 16); // HH:MM format
                const selectedDate = dateInput.value;
                const today = now.toISOString().slice(0, 10); // YYYY-MM-DD format

                if (selectedDate === today) {
                    heureDebutInput.min = currentTime; // Bloquer les heures passées
                } else {
                    heureDebutInput.min = "00:00"; // Autoriser toutes les heures pour les autres jours
                }
            }

            dateInput.addEventListener("change", updateMinTime);
            updateMinTime(); // Vérifie dès le chargement si une date est déjà sélectionnée
        });
    </script>
{% endblock %}






{% block body %}
    <div class="reservation-container">
        <h1>Réservation</h1>
        {{ form_start(reservationForm, {'attr': {'class': 'reservation-form'}}) }}
        <div class="form-group">
            {{ form_label(reservationForm.date) }}
            {{ form_widget(reservationForm.date, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(reservationForm.heureDebut) }}
            {{ form_widget(reservationForm.heureDebut, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(reservationForm.heureFin) }}
            {{ form_widget(reservationForm.heureFin, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(reservationForm.idStationDepart) }}
            {{ form_widget(reservationForm.idStationDepart, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(reservationForm.idStationArrivee) }}
            {{ form_widget(reservationForm.idStationArrivee, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(reservationForm.typeVelo) }}
            {{ form_widget(reservationForm.typeVelo, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_widget(reservationForm.submit, {'attr': {'class': 'cta-button'}}) }}
        </div>
        {{ form_end(reservationForm) }}
    </div>
{% endblock %}
